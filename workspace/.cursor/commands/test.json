{
  "name": "Run Full Test Suite",
  "description": "Ejecuta todos los tests con cobertura",
  "steps": [
    {
      "step": 1,
      "name": "Unit Tests",
      "command": "npm run test:unit",
      "description": "Tests unitarios",
      "onFailure": "continue"
    },
    {
      "step": 2,
      "name": "Integration Tests",
      "command": "npm run test:integration",
      "description": "Tests de integración",
      "onFailure": "continue"
    },
    {
      "step": 3,
      "name": "E2E Tests",
      "command": "npm run test:e2e",
      "description": "Tests end-to-end",
      "onFailure": "continue"
    },
    {
      "step": 4,
      "name": "Coverage Report",
      "command": "npm run test:coverage",
      "description": "Generar reporte de cobertura",
      "onFailure": "continue"
    }
  ],
  "prompt": "Ejecutar suite completa de tests:\n1. Tests unitarios\n2. Tests de integración\n3. Tests E2E\n4. Reporte de cobertura"
}

