# SANDRA NUCLEUS - ENVIRONMENT CONFIGURATION
# Copia este archivo a .env y configura tus valores

# ============================================================================
# MODO Y ENTORNO
# ============================================================================
NODE_ENV=production
SANDRA_MODE=GALAXY_PROFESSIONAL
SANDRA_VERSION=100.0.0
TENANT_ID=guestsvalencia

# ============================================================================
# SERVIDOR Y PUERTOS
# ============================================================================
PORT=7777
WS_PORT=7778
MCP_PORT=7779
HOST=0.0.0.0

# ============================================================================
# BASE DE DATOS
# ============================================================================
DATABASE_URL=postgresql://sandra_admin:SandraGalaxy2025!@localhost:5432/sandra_nucleus
REDIS_URL=redis://:SandraRedis2025@localhost:6379

# ============================================================================
# APIs DE INTELIGENCIA ARTIFICIAL
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL=gpt-4-turbo-preview

# APIs de Voz
ELEVENLABS_API_KEY=your-elevenlabs-key
DEEPGRAM_API_KEY=your-deepgram-key
ASSEMBLY_AI_KEY=your-assembly-key

# APIs de Avatar
HEYGEN_API_KEY=your-heygen-key
D_ID_API_KEY=your-did-key

# ============================================================================
# SERVICIOS DE TERCEROS
# ============================================================================
# Mensajería
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
WHATSAPP_TOKEN=your-whatsapp-token
TELEGRAM_BOT_TOKEN=your-telegram-token

# Pagos
STRIPE_SECRET_KEY=your-stripe-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook
PAYPAL_CLIENT_ID=your-paypal-client
PAYPAL_SECRET=your-paypal-secret

# Email
SENDGRID_API_KEY=your-sendgrid-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================================================
# SEGURIDAD
# ============================================================================
JWT_SECRET=your-super-secure-jwt-secret-change-this
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_RATE_LIMIT=100

# ============================================================================
# FEATURES FLAGS
# ============================================================================
ENABLE_MULTIMODAL=true
ENABLE_VOICE=true
ENABLE_AVATAR=true
ENABLE_MCP=true
ENABLE_SUBAGENTS=true
ENABLE_EDGE_CACHE=true
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true

# ============================================================================
# SUBAGENTES ESPECÍFICOS
# ============================================================================
SUBAGENT_PRICING_ENABLED=true
SUBAGENT_BOOKING_ENABLED=true
SUBAGENT_SUPPORT_ENABLED=true
SUBAGENT_MARKETING_ENABLED=true
SUBAGENT_ANALYTICS_ENABLED=true
SUBAGENT_SECURITY_ENABLED=true

# ============================================================================
# CONFIGURACIÓN DE CACHE
# ============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
SESSION_TTL=86400

# ============================================================================
# LOGS Y MONITORING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/sandra/sandra.log
METRICS_ENABLED=true
PROMETHEUS_PORT=9091

# ============================================================================
# DOMINIO Y CORS
# ============================================================================
DOMAIN=https://guestsvalencia.es
CORS_ORIGINS=https://guestsvalencia.es,http://localhost:3000
COOKIE_DOMAIN=.guestsvalencia.es
SECURE_COOKIES=true

# ============================================================================
# BACKUPS Y RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30
CHECKPOINT_AUTO_CREATE=true
CHECKPOINT_MAX_COUNT=10

# ============================================================================
# LÍMITES Y QUOTAS
# ============================================================================
MAX_TOKENS_PER_REQUEST=4000
MAX_CONVERSATION_LENGTH=100
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_USERS=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=60
