{
  "mcp": {
    "version": "1.0",
    "protocol": "model-context-protocol",
    "enabled": true,
    "config": {
      "server": {
        "host": "localhost",
        "port": 5000,
        "secure": false
      },
      "models": {
        "primary": {
          "provider": "openai",
          "model": "gpt-4o",
          "apiKey": "${OPENAI_API_KEY}",
          "temperature": 0.7,
          "maxTokens": 2000
        },
        "local": {
          "provider": "ollama",
          "model": "qwen-7b-chat",
          "endpoint": "${LOCAL_INFERENCE_URL}",
          "enabled": false
        },
        "accelerator": {
          "provider": "groq",
          "model": "llama3-70b-8192",
          "apiKey": "${GROQ_API_KEY}",
          "enabled": false
        }
      },
      "avatar": {
        "provider": "heygen",
        "apiKey": "${HEYGEN_API_KEY}",
        "avatarId": "${HEYGEN_AVATAR_ID}",
        "voiceEnabled": true,
        "videoQuality": "high"
      },
      "personality": {
        "name": "Sandra",
        "role": "Professional AI Assistant",
        "language": "es",
        "traits": [
          "professional",
          "technical",
          "efficient",
          "empathetic",
          "goal-oriented"
        ],
        "context": {
          "company": "GuestsValencia",
          "industry": "Tourism & Real Estate",
          "location": "Valencia, Spain",
          "ceo": "Claytis Miguel Tom Zuaznabar"
        }
      },
      "capabilities": {
        "conversational": true,
        "codeExecution": false,
        "fileManagement": false,
        "webSearch": false,
        "multimodal": true
      }
    }
  }
}
