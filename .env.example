# ===== SANDRA IA 7.0 - ENVIRONMENT CONFIGURATION =====
# Copy this file to .env.local and fill with your actual credentials
# NEVER commit .env files with real credentials

# ===== BACKEND APIS (Netlify Functions) =====
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY_HERE
GROQ_API_KEY=gsk_YOUR_GROQ_KEY_HERE
CARTESIA_API_KEY=sk_car_YOUR_CARTESIA_KEY_HERE
CARTESIA_VOICE_ID=YOUR_CARTESIA_VOICE_ID_HERE
OLLAMA_URL=http://localhost:11434

# ===== SUPABASE CONFIGURATION (Real-time & Sessions) =====
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===== AIRTABLE CONFIGURATION (Data Persistence & CMS) =====
REACT_APP_AIRTABLE_API_KEY=your_airtable_api_key_here
REACT_APP_AIRTABLE_BASE_ID=your_airtable_base_id_here

# ===== HEYGEN AVATAR (Optional) =====
HEYGEN_AVATAR_ID=YOUR_HEYGEN_AVATAR_ID_HERE

# ===== NETLIFY CONFIGURATION =====
NETLIFY_AUTH_TOKEN=nfp_YOUR_TOKEN_HERE
NETLIFY_SITE_ID=YOUR_NETLIFY_SITE_ID_HERE

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
REACT_APP_API_URL=https://sandra.guestsvalencia.es
REACT_APP_ENV=production

# ===== FEATURE FLAGS =====
REACT_APP_ENABLE_SUPABASE_REALTIME=true
REACT_APP_ENABLE_AIRTABLE_SYNC=true
REACT_APP_ENABLE_OLLAMA_LOCAL=true
REACT_APP_ENABLE_GROQ_FALLBACK=true
