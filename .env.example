# ====== SANDRA IA MOBILE - ENVIRONMENT VARIABLES ======
# Complete configuration for WebSocket + Socket.IO + WebRTC

# ====== LLM (Chat) ======
# DEV - GROQ (free tier for testing)
GROQ_API_KEY=gsk-xxxx
GROQ_MODEL=mixtral-8x7b-32768

# PROD - OpenAI GPT-4
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-4o

# Anthropic Claude (for Socket.IO server)
ANTHROPIC_API_KEY=sk-ant-xxxx
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ====== TTS (Text-to-Speech) ======
# ElevenLabs (primary)
ELEVENLABS_API_KEY=el-xxxx
ELEVENLABS_VOICE_ID=YOUR_ELEVENLABS_VOICE_ID

# Cartesia (fallback + WebSocket streaming)
CARTESIA_API_KEY=sk_car_xxxx
CARTESIA_VOICE_ID=YOUR_CARTESIA_VOICE_ID

# ====== WEBSOCKET / SOCKET.IO ======
# Optional Redis for horizontal scaling
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Session configuration
SESSION_TTL=3600
MAX_SESSIONS=10000

# ====== WEBRTC ======
# STUN/TURN servers (optional - using public Google STUN by default)
WEBRTC_STUN_URL=stun:stun.l.google.com:19302
# WEBRTC_TURN_URL=turn:your-turn-server.com:3478
# WEBRTC_TURN_USERNAME=username
# WEBRTC_TURN_CREDENTIAL=password

# ====== LOCALE & MODE ======
DEFAULT_MODE=dev
DEFAULT_LOCALE=es-ES

# ====== NETLIFY DEPLOYMENT ======
NETLIFY_AUTH_TOKEN=nfp-xxxx
NETLIFY_SITE_ID=your-site-id

